<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <!-- Define el mapeo de la clase Lector a la tabla "lector" en la base de datos -->
    <class name="Biblioteca.Lector" table="lector">
        <!-- Define la clave primaria -->
        <id name="id" type="int">
            <column name="id" /> <!-- Nombre de la columna en la tabla -->
            <generator class="native" /> <!-- Generador de claves primarias -->
        </id>
        <!-- Define las propiedades de la clase -->
        <property name="nombre" type="string">
            <column name="nombre" /> <!-- Nombre de la columna en la tabla -->
        </property>
        <property name="apellido" type="string">
            <column name="apellido" /> <!-- Nombre de la columna en la tabla -->
        </property>
        <property name="email" type="string">
            <column name="email" /> <!-- Nombre de la columna en la tabla -->
        </property>
    </class>
</hibernate-mapping>

